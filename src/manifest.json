{
  "manifest_version": 3,
  "name": "ClaudeToZenn",
  "version": "1.0",
  "description": "Generate Zenn articles from Claude.ai conversations",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "host_permissions": [
    "https://claude.ai/*"
  ]
}